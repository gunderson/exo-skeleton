doctype html
html(lang='en')
  head
    title #{copy.site_title}
    meta(charset    ='utf-8')
    meta(http-equiv ='X-UA-Compatible'                      , content='IE=edge,chrome=1')
    meta(name       ='viewport'                             , content='width=device-width,initial-scale=1, maximum-scale=1, user-scalable=no')
    link(href       ='http://www5.mercedes-benz.com/media/assets/img/favicon.ico'          , rel='icon', type='image/x-icon')
    link(rel        ='shortcut icon'                        , href='http://www5.mercedes-benz.com/media/assets/img/favicon.ico')
    meta(name       ='apple-mobile-web-app-capable'         , content='yes')
    meta(name       ='mobile-web-app-capable'               , content='yes')
    meta(name       ='apple-mobile-web-app-status-bar-style', content='default')
    link(rel        ='apple-touch-icon'                     , href='assets/imgs/exo-logo_120.png')
    meta(name       ='description'                          , content='project scaffolding')
    meta(name       ='keywords'                             , content='scaffolding, web-app, backbone, layoutmanager, jquery, bower, yeoman, grunt, jade, less')
    meta(name       ='author'                               , content='posit labs')
    meta(name       ='copyright'                            , content='Â©2013')
    meta(property   ='og:url'                               , content='http://github.com/positlabs/exo-skeleton')
    meta(property   ='og:title'                             , content='exo-skeleton')
    meta(property   ='og:image'                             , content='https://raw.github.com/positlabs/exo-skeleton/master/app/assets/imgs/exo-logo_120.png')
    meta(property   ='og:image:type'                        , content='image/png')
    meta(property   ='og:description'                       , content='')
    meta(property   ='twitter:title'                        , content='exo-skeleton')
    meta(property   ='twitter:image'                        , content='https://raw.github.com/positlabs/exo-skeleton/master/app/assets/imgs/exo-logo_120.png')
    meta(property   ='twitter:description'                  , content='exo-skeleton can support up to 25 times its own weight!')
    if env == "dist"
        link(rel='stylesheet', href='css/styles.css')
    else
        link(rel='stylesheet', href='styles/master.css')
    script.
      var env = "#{env}"; 
  body
    include global/header
    include global/footer
    include ui/main-menu
    include main
    if env == "dist"
        script(data-main='js/master', src='source.js')
    else
        script(data-main='js/master', src='js/bower/requirejs/require.js')